<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itwillbs.p2c3.boogimovie.mapper.MemberMapper">
	<insert id="insertMember">
		INSERT INTO member
		VALUES (
			#{id}
			,#{name}
			,#{pwd}
			,#{email}
			,#{tel}
			,#{addr}
			,#{movie_genre}
			,"활동"
			,#{my_theater}
			,"0"
			,now()
			,null
			,#{birth}
		);
		
	</insert>
	
	<select id="preRegMember" resultType="itwillbs.p2c3.boogimovie.vo.MemberVO">
		SELECT member_id 
		FROM member 
		WHERE member_name = #{name} AND member_birth = #{birth}
	</select>
	
	<select id="isCorrectMember" resultType="itwillbs.p2c3.boogimovie.vo.MemberVO">
		SELECT *
		FROM member
		WHERE member_id = #{id} AND member_pwd = #{pwd}
	</select>
	
	
</mapper>
