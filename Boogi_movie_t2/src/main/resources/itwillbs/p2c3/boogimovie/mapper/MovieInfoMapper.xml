<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itwillbs.p2c3.boogimovie.mapper.MovieInfoMapper">
	<select id="selectMovieInfo" resultType="itwillbs.p2c3.boogimovie.vo.MovieVO">
		SELECT *
		FROM movie
		<if test="movie_num != null and movie_num != ''">
		    WHERE movie_num = #{movie_num}
		</if>
		WHERE movie_status = '개봉'
	</select>
	
	<select id="selectMovie" resultType="itwillbs.p2c3.boogimovie.vo.MovieVO">
		SELECT *
		FROM movie
 		<if test="movie_num != null and movie_num != ''"> 
 		    WHERE movie_num = #{movie_num} 
 		</if> 
		
	</select>
	
	<select id="selectMovieInfoLike" resultType="itwillbs.p2c3.boogimovie.vo.MovieVO">
		SELECT *
		FROM movie
		ORDER BY movie_like;
	</select>
	
	<select id="selectMovieInfoAbc" resultType="itwillbs.p2c3.boogimovie.vo.MovieVO">
		SELECT *
		FROM movie
		ORDER BY movie_name;
	</select>
	
	<select id="selectMovieGenreNum" resultType="int">
		SELECT genre_num
		FROM movie_genre
		WHERE genre_name = #{genre_name}
	</select>
	
	<select id="selectMovieInfoGenre" resultType="itwillbs.p2c3.boogimovie.vo.MovieVO">
		SELECT *
		from movie
		WHERE genre_num = #{genre_num}
	</select>
		
</mapper>