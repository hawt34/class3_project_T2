<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="itwillbs.p2c3.boogimovie.mapper.ReviewMapper">
 	<insert id="insertReview" >
 	INSERT INTO review (movie_num, member_id, rating, review_text)
    VALUES (#{movie_num}, #{member_id}, #{rating}, #{review_text})	
 	</insert>
 	
 	 <select id="selectReviewList" resultType="itwillbs.p2c3.boogimovie.vo.ReviewVO" >
        SELECT * FROM review WHERE movie_num = #{movie_num}
    </select>
 	
 	
 	
 </mapper>